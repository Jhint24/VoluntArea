{{>calender}}

<!-- Uses built-in `if` helper. -->
{{#if showTitle}}
<h1>Home</h1>
{{/if}}

<div class="col s6">
  {{#each orgs}}
  <div class="row">
    <div class="card" id="cardDiv{{this.id}}">

      <div "sidebar" id="content-container">
        <img class="activator" src="http://web.alsa.org/images/content/pagebuilder/volunteer413887.png" style="width:60px">
        <br>
        <form action=“/events/{{this.org_name}}{{this.org_activity}}?_method=PUT” method=“POST”>
          <div class=‘eventActivity>
            <br>{{this.org_name}}
            <div></div>{{this.org_activity}}</div>
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4" id="displayDate" src="http://web.alsa.org/images/content/pagebuilder/volunteer413887.png"
          style="width:200px">

          <br>
          <form action=“/events/{{this.org_date}}?_method=PUT” method=“POST”>
            <div class="eventDate" id="dateDiv" data-thisVal={{this.id}}>{{this.org_date}}</div>
            <br>

            <i class="material-icons right">more_vert</i>
        </span>
        <p>
          <a href="http://{{this.org_url}}">Click to be taken to {{this.org_name}}</a>
        </p>
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">{{this.org_vols}} volunteers needed
          <i class="material-icons right">close</i>
        </span>


        <!-- HTML Form -->
        <div class="container-fluid">
          <div class="row">

            <div class="col s2">
              <input type="text" class="form-control col s6" placeholder="Zip Code" id="zipCode{{this.id}}" type="text" class="validate">
            </div>

            <div class="col s4">
              <input type="text" class="form-control col s6" placeholder="First Name" id="userName2{{this.id}}" type="text" class="validate">
            </div>

            <div class="col s6">
              <input type="text" class="form-control col s6" placeholder="Email" id="emailAddress{{this.id}}" type="text" class="validate">
            </div>

          </div>
        </div>

        <button class="btn waves-effect waves-light submitButton" data-id={{this.id}} id="submitButton2" type="submit" name="action">Submit
          <i class="material-icons right">send</i>
        </button>

        <p></p>



      </div>

    </div>
  </div>
  {{/each}}



</div>
</div>
</div>

</form>



</div>



{{>footer}}